# ===========================================
# KIABA Rencontres - Variables d'environnement
# Copier vers .env et remplir les valeurs
# Domaine actuel : ci-habiko.com (à remplacer plus tard par ci-kiaba.com si besoin)
# ===========================================

# Django
DEBUG=False
SECRET_KEY=change-me-generate-secure-key
ALLOWED_HOSTS=localhost,127.0.0.1,ci-habiko.com,www.ci-habiko.com,.vercel.app
SITE_URL=https://ci-habiko.com

# Base de données - Supabase PostgreSQL
DB_ENGINE=postgres
DATABASE_URL=postgresql://postgres:PASSWORD@db.PROJECT_REF.supabase.co:5432/postgres
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_HOST=db.PROJECT_REF.supabase.co
POSTGRES_PORT=5432

# Stockage - Supabase (pour Vercel)
USE_SUPABASE_STORAGE=True
SUPABASE_STORAGE_BUCKET=media
SUPABASE_S3_ENDPOINT=https://PROJECT_REF.supabase.co/storage/v1/s3
SUPABASE_S3_ACCESS_KEY_ID=your_access_key
SUPABASE_S3_SECRET_ACCESS_KEY=your_secret_key
SUPABASE_STORAGE_PUBLIC_URL=https://PROJECT_REF.supabase.co/storage/v1/object/public

# Static / Media (local dev)
STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# Email (SendGrid ou SMTP Supabase)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your_sendgrid_api_key
DEFAULT_FROM_EMAIL=KIABA Rencontres <no-reply@ci-habiko.com>
SERVER_EMAIL=KIABA Rencontres Errors <errors@ci-habiko.com>

# CinetPay (optionnel)
CINETPAY_SITE_ID=
CINETPAY_API_KEY=
CINETPAY_SITE_KEY=
CINETPAY_MODE=PRODUCTION
CINETPAY_NOTIFY_URL=https://ci-habiko.com/accounts/payment/cinetpay/notify/
CINETPAY_RETURN_URL=https://ci-habiko.com/accounts/payment/cinetpay/return/
